---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
const siteTitle = "TruLrn | Truly Learn Everything";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/trulrn_favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/trulrn_192_logo.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#1b0135" />
    <meta
      name="description"
      content="TruLrn is a knowledge portal website for experiencing, learning and gaining skills."
    />
    <title>{pageTitle} ðŸŽ† {siteTitle}</title>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-88VJFSZYXE"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-88VJFSZYXE");
    </script>
  </head>
  <body>
    <Header />
    <main>
      <h1>
        {pageTitle}
      </h1>
      <slot />
    </main>
    <hr/>
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
    <!-- SERVICE WORKER SCRIPT -->
	<script>
    if ('serviceWorker' in navigator) {
    window.addEventListener('load', function() {
    navigator.serviceWorker.register('serviceWorker.js').then(function(registration) {
    // Registration was successful
    console.log('ServiceWorker registration successful with scope: ', registration.scope);
    }, function(err) {
    // registration failed :(
    console.log('ServiceWorker registration failed: ', err);
    });
    });
    }
    </script>
  </body>
</html>
