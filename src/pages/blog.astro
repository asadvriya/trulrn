---
const allPosts = await Astro.glob('../pages/posts/*.md');
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
import BlogPost from '../components/BlogPost.astro';
const pageTitle = "My Learning Blog";

---

<BaseLayout pageTitle={pageTitle}>
	<main>
		<h2>Welcome to TruLrn Blog Section</h2>
		<p>In this website, I will post article on about Education, Healthcare, Technology, Facts and much more</p>
	</main>	
	
	<ul class="post-list">
		{allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} pubDate={post.frontmatter.pubDate} image={post.frontmatter.image.url} author={post.frontmatter.author} />)}
	  </ul>
  </BaseLayout>