---
const allPosts = await Astro.glob("../pages/posts/*.md");
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const pageTitle = "My Learning Blog";
const pageDescription =
  "This is the blog page of TruLrn. Here, we will keep posing about eduation, health, technology,facts and much more.";
---

<BaseLayout pageTitle={pageTitle} , pageDescription={pageDescription}>
    <h2>Welcome to TruLrn Blog Section</h2>
    <p>
      In this website, we will post article on about Education, Healthcare,
      Technology, Facts and much more
    </p>

  <ul class="post-list">
    {
      allPosts.map((post) => (
        <BlogPost
          url={post.url}
          title={post.frontmatter.title}
          pubDate={post.frontmatter.pubDate}
          image={post.frontmatter.image.url}
          author={post.frontmatter.author}
        />
      ))
    }
  </ul>
</BaseLayout>
